<div>
  <a href="javascript://" class="button_link remove_div navigation">Remove filter</a>
  <p>Name of filter:
	<input type="text" class="filter_name" value="<%= name %>" />
  </p>
  <p>Data to filter:
	<select>
	  <%= render :partial => "field_optgroup",
	             :locals => { :name => "Facility",
	                          :fields => facility_fields,
	                          :consider => filter[2] == "facility",
	                          :selected => filter[1] } %>
	  <%= render :partial => "field_optgroup",
	             :locals => { :name => "Fridge",
	                          :fields => fridge_fields,
	                          :consider => filter[2] == "fridge",
	                          :selected => filter[1] } %>
	  <%= render :partial => "field_optgroup",
	             :locals => { :name => "Schedule",
	                          :fields => schedule_fields,
	                          :consider => filter[2] == "schedule",
	                          :selected => filter[1] } %>
  	</select>
	 OR 
	<input type="text" class="filter wide-field" value="<%= filter[0] %>" />
  </p>
  <table class="filtering">
	<thead>
	  <tr>
		<th>Condition</th>
		<th>Name</th>
	  </tr>
	</thead>
	<tbody>
	  <% conds.each do |c| %>
	  <% if c[1] != "All" %>
	  <tr>
		<td><input type="text" class="wide-field" value="<%= c[0] %>" /></td>
		<td><input type="text" value="<%= c[1] %>" /></td>
		<td>
		  <a href="javascript://" class="button_link remove_row">Remove</a>
		</td>
	  </tr>
	  <% end %>
	  <% end %>
	</tbody>
  </table>
  <%= link_to_function "Add condition", "addFilterCondition(this)", :class => "button_link" %>
</div>
